library(gtsummary)
summary_table<-summary_data %>% 
  ungroup() %>% 
  select(SEX, AGE, ETHNICITYNAME,SITE_CODED_DESC,STAGE_BEST_CLEAN,schedule, BMI,BSA,BSA_over_two,BSA_cap, percentage_fu,percentage_oxali, dose_reduction_FU,dose_reduction_oxali,survival,event,dose_reduction,dose_difference_oxali,dose_difference_fu,BSA_cap_dose_reduced, combination,`Commissioning region`) %>% 
  tbl_summary(by="dose_reduction") %>% 
