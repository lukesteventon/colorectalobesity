analysis<-analysis %>% 
  group_by(PSEUDO_PAT) %>%
  mutate(survival=difftime(VITALSTATUSDATE, index, units ="days")) %>% 
  mutate(event=ifelse(survival<1826&VITALSTATUS=="D",1,0))
